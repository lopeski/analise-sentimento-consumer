{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@presentation/*": [
        "src/presentation/*"
      ],
      "@infra/*": [
        "src/infra/*"
      ],
      "@core/*": [
        "src/core/*"
      ],
      "@main/*": [
        "src/main/*"
      ],
      "@test/*":[
        "test/*"
      ],
      "@di/*": [
        "src/di/*"
      ],
    }
  }
}
